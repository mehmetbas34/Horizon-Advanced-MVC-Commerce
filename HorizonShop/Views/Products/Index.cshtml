@model IEnumerable<HorizonShop.Models.Product>

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="container con-1">
    <div class="page-header-row">
        <section class="page-hero" style="margin-bottom:0;">
            <h1>Product List</h1>
            <p style="margin-bottom:0;">Manage your inventory.</p>
        </section>

        <a href="@Url.Action("Create")" class="btn-add-new">
            + Add New Product
        </a>
    </div>

    <div class="contact-card" style="padding: 0; overflow: hidden;">
        @if (Model != null && Model.Any())
        {
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>Category</th>
                        <th>@Html.DisplayNameFor(model => model.Price)</th>
                        <th style="text-align:right;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? Url.Content("~/Content/images/product/electronic-devices.png") : Url.Content("~/Content/" + item.ImageUrl))"
                                     style="width:50px; height:50px; object-fit:contain; border:1px solid #eee;" alt="Product Image">
                            </td>
                            <td>
                                <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                            </td>
                            <td>
                                @(item.Category != null ? item.Category.Name : "-")
                            </td>
                            <td style="color:#ffd333; font-weight:bold;">
                                $@Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td style="text-align:right;">
                                <a href="@Url.Action("Edit", new { id=item.ProductId })" class="action-link edit"><i class="fas fa-edit"></i> Edit</a>
                                <span>|</span>
                                <a href="@Url.Action("Delete", new { id=item.ProductId })" class="action-link delete"><i class="fas fa-trash"></i> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div style="padding: 50px; text-align: center; color: #6c757d;">
                <p>No products found.</p>
                <a href="@Url.Action("Create")" style="color:#ffd333; font-weight:bold;">Add your first product</a>
            </div>
        }
    </div>
</main>