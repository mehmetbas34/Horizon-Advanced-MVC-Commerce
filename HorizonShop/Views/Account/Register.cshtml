@model HorizonShop.Models.User
@{ ViewBag.Title = "Register"; Layout = "~/Views/Shared/_Layout.cshtml"; }

<main class="container con-1">
    <section class="page-hero"><h1>Create Account</h1></section>
    <section class="contact-grid" style="justify-content:center; display:flex;">
        <div class="contact-card" style="width:100%; max-width:500px;">
            <h2>Register</h2>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "contact-form" }))
            {
                @Html.AntiForgeryToken() <div class="form-group"><label>First Name</label>@Html.TextBoxFor(m => m.FirstName, new { required = "required" })</div>
                <div class="form-group"><label>Last Name</label>@Html.TextBoxFor(m => m.LastName, new { required = "required" })</div>
                <div class="form-group"><label>Email</label>@Html.TextBoxFor(m => m.Email, new { type = "email", required = "required" })</div>
                <div class="form-group"><label>Password</label>@Html.PasswordFor(m => m.Password, new { required = "required" })</div>
                <button type="submit" class="btn-submit" style="width:100%">Register Now</button>
            }
        </div>
    </section>
</main>

@section Scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}