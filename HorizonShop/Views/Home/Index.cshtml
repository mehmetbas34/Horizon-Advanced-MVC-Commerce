@model IEnumerable<HorizonShop.Models.Product>
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="container con-1">

    <section class="slider-section">
        <div class="slider-container">
            <div class="slider">
                <div class="slide active">
                    <div class="slide-content">
                        <h2>Discount</h2>
                        <p>Saving money has never been easier or more rewarding. Don't miss out—shop smart, save big, and treat yourself today!</p>
                        <a href="#" class="shop-now-btn">Shop Now</a>
                    </div>
                    <div class="slide-image">
                        <img src="~/Content/images/slider/slider1.png" alt="Discount">
                    </div>
                </div>

                <div class="slide">
                    <div class="slide-content">
                        <h2>Everything You Need For Every Job</h2>
                        <p>Explore our wide range today and enjoy the convenience of finding everything you need in one place!</p>
                        <a href="#" class="shop-now-btn">Shop Now</a>
                    </div>
                    <div class="slide-image">
                        <img src="~/Content/images/slider/slider2.png" alt="Needs">
                    </div>
                </div>

                <div class="slide">
                    <div class="slide-content">
                        <h2>Secure & Fast Delivery</h2>
                        <p>Get your products delivered to your doorstep with our reliable and fast shipping service.</p>
                        <a href="#" class="shop-now-btn">Shop Now</a>
                    </div>
                    <div class="slide-image">
                        <img src="~/Content/images/slider/slider3.png" alt="Fast Delivery">
                    </div>
                </div>
            </div>
            <div class="slider-dots">
                <span class="dot active" data-slide="0"></span>
                <span class="dot" data-slide="1"></span>
                <span class="dot" data-slide="2"></span>
            </div>
        </div>
    </section>

    <section class="features-section">
        <div class="features-block">
            <div class="feature-item">
                <h4>Free Shipping</h4>
                <p>For orders from $25</p>
            </div>
            <div class="feature-item">
                <h4>Support 24/7</h4>
                <p>Call us anytime</p>
            </div>
            <div class="feature-item">
                <h4>100% Safety</h4>
                <p>Only secure payments</p>
            </div>
            <div class="feature-item">
                <h4>Hot Offers</h4>
                <p>Discounts up to 90%</p>
            </div>
        </div>
    </section>
    
    <section id="product-section">
        @Html.Partial("_ProductList", Model)
    </section>

    <section class="promo-banner-section">
        <div class="promo-banner">
            <img src="~/Content/images/slider/promo-banner.jpeg" alt="Shopping Products Banner">
            <div class="promo-banner-content">
                <h2>The Future of Tech is Here</h2>
                <p><strong>Discover the latest in high-performance electronics, gadgets, and accessories.</strong></p>
                <a href="#" class="promo-btn">Shop Now</a>
            </div>
        </div>
    </section>

    <section>
        <h2>Popular Categories</h2>
        <div class="grid-container">
            <div class="card" onclick="location.href='@Url.Action("CategoryProducts", "Home", new { categoryId = 3 })'" style="cursor:pointer; transition: transform 0.3s ease;">
                <img src="~/Content/images/product/electronic-devices.png" alt="Electronics Devices">
                <h3>Electronic Devices</h3>
            </div>
            <div class="card" onclick="location.href='@Url.Action("CategoryProducts", "Home", new { categoryId = 4 })'" style="cursor:pointer; transition: transform 0.3s ease;">
                <img src="~/Content/images/product/books.png" alt="Books">
                <h3>Books</h3>
            </div>
            <div class="card" onclick="location.href='@Url.Action("CategoryProducts", "Home", new { categoryId = 5 })'" style="cursor:pointer; transition: transform 0.3s ease;">
                <img src="~/Content/images/product/home-garden.png" alt="Home Garden">
                <h3>Home & Garden</h3>
            </div>
            <div class="card" onclick="location.href='@Url.Action("CategoryProducts", "Home", new { categoryId = 6 })'" style="cursor:pointer; transition: transform 0.3s ease;">
                <img src="~/Content/images/product/Beauty.png" alt="Health & Beauty">
                <h3>Health & Beauty</h3>
            </div>
        </div>
    </section>

    <section>
        <h2>Latest News</h2>
        <div class="grid-container">

            <div class="card" onclick="location.href='@Url.Action("Blog", "Home")'" style="cursor:pointer; transition: transform 0.3s ease;">
                <img src="~/Content/images/news/news1.png" alt="News 1">
                <h3>ChatGPT AI bot adds shopping to its powers</h3>
                <p>29 April 2025</p>
            </div>

            <div class="card" onclick="location.href='@Url.Action("Blog", "Home")'" style="cursor:pointer; transition: transform 0.3s ease;">
                <img src="~/Content/images/news/news2.png" alt="News 2">
                <h3>“Made in Türkiye” Products are on the World Stage</h3>
                <p>10 October 2025</p>
            </div>

        </div>
    </section>

</main>