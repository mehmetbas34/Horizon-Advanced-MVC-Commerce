@model IEnumerable<HorizonShop.Models.User>

@{
    ViewBag.Title = "Manage Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="container con-1">
    <div class="page-header-row">
        <section class="page-hero" style="margin-bottom:0;">
            <h1>User Management</h1>
            <p style="margin-bottom:0;">View and manage all registered users.</p>
        </section>
    </div>

    @if (TempData["Error"] != null)
    {
        <div style="padding:15px; background:#f8d7da; color:#721c24; border-radius:4px; margin-bottom:20px;">
            @TempData["Error"]
        </div>
    }

    <div class="contact-card" style="padding: 0; overflow: hidden;">
        <table class="styled-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Phone)</th>
                    <th>@Html.DisplayNameFor(model => model.Role)</th>
                    <th style="text-align:right;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            #@Html.DisplayFor(modelItem => item.UserId)
                        </td>
                        <td>
                            <strong>@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</strong>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @(string.IsNullOrEmpty(item.Phone) ? Html.Raw("-") : Html.DisplayFor(modelItem => item.Phone))
                        </td>
                        <td>
                            @if (item.Role == "Admin")
                            {
                                <span style="background:#ffd333; color:#333; padding:4px 10px; border-radius:4px; font-weight:bold; font-size:12px;">
                                    @Html.DisplayFor(modelItem => item.Role)
                                </span>
                            }
                            else
                            {
                                <span style="background:#e9ecef; color:#666; padding:4px 10px; border-radius:4px; font-size:12px;">
                                    @Html.DisplayFor(modelItem => item.Role)
                                </span>
                            }
                        </td>
                        <td style="text-align:right;">
                            <a href="@Url.Action("Edit", new { id=item.UserId })" class="action-link edit">
                                <i class="fas fa-user-cog"></i> Change Role
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</main>