@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="container con-1">

    <section class="page-hero text-center">
        <h1 style="color: #dc3545; font-size: 48px;">Oops!</h1>
        <p>Something went wrong while processing your request.</p>
    </section>

    <div class="contact-card text-center p-60">

        <i class="fas fa-exclamation-triangle empty-state-icon" style="color: #dc3545;"></i>

        <h3 class="mb-20">An unexpected error occurred.</h3>

        <p class="text-muted mb-30">
            Don't worry, our team has been notified. <br>
            Please try again later or go back to the homepage.
        </p>

        <a href="@Url.Action("Index", "Home")" class="btn-submit btn-inline no-decoration">
            Back to Home
        </a>

    </div>

</main>